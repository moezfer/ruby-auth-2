<h1><span class="titlehighlight">Log</span> In</h1>
<div class='formsign'>
<%= form_with url:log_in_path, local: true do |form| %>
  <div class="forminput">
    <%= form.label :email,class:'form-label' %>
    <%= form.text_field :email,class:'form-control' %>
  </div>

  <div class="forminput">
    <%= form.label :password ,class:'form-label' %>
    <%= form.password_field :password,class:'form-control' %>
  </div>
  <div class="forminput">
  <%= form.submit "Log In" ,class:"buttonsubmit" %>
  </div>
  
  <%= link_to "Sign Up", sign_up_path, class: "btn btn-primary" %>
<% end %>
</div>
